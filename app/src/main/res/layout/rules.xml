<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerInParent="true">

    <!-- Etichetta e righello per interi -->
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">
        <TextView
            style="@style/CustomTextViewStyle"
            android:id="@+id/label_integers"
            android:text="Interi: " />

        <org.dd.camerapreview.draggableruler.DraggableRulerView
            android:id="@+id/ruler_integers"
            style="@style/CustomDraggableRulerStyle" />
    </FrameLayout>

    <!-- Etichetta e righello per stringhe -->
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">
        <TextView
            android:id="@+id/label_strings"
            style="@style/CustomTextViewStyle"
            android:text="Stringhe: " />

        <org.dd.camerapreview.draggableruler.DraggableRulerView
            android:id="@+id/ruler_strings"
            style="@style/CustomDraggableRulerStyle" />
    </FrameLayout>

    <!-- Etichetta e righello per float -->
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">
        <TextView
            android:id="@+id/label_floats"
            style="@style/CustomTextViewStyle"
            android:text="Float: " />

        <org.dd.camerapreview.draggableruler.DraggableRulerView
            android:id="@+id/ruler_floats"
            style="@style/CustomDraggableRulerStyle" />
    </FrameLayout>

    <!-- Etichetta e righello per alfanumerico -->
    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">
        <TextView
            android:id="@+id/label_alphanumeric"
            style="@style/CustomTextViewStyle"
            android:text="Alfanumerico: " />

        <org.dd.camerapreview.draggableruler.DraggableRulerView
            android:id="@+id/ruler_alphanumeric"
            style="@style/CustomDraggableRulerStyle" />
    </FrameLayout>

</LinearLayout>
